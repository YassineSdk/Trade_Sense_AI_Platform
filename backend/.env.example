# TradeSense AI Platform - Environment Variables Template
# Copy this file to .env and update the values

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_APP=wsgi.py
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="TradeSense AI Platform"
VERSION=1.0.0
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development)
DATABASE_URL=sqlite:///tradesense_dev.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/tradesense

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CELERY CONFIGURATION (Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/tradesense.log

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@tradesense.ai

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@tradesense.ai

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_BROKER=paper_trading
MARKET_DATA_REFRESH_INTERVAL=5

# =============================================================================
# STRIPE PAYMENT CONFIGURATION (Optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================
# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# OpenAI (AI Signals)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# SENTRY (Error Tracking - Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
HOST=0.0.0.0
WORKERS=4
